<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/pref_design_main_category_title">
        <SwitchPreference
            android:defaultValue="false"
            android:icon="?nightModeIcon"
            android:key="@string/pref_design_key_night_mode"
            android:summaryOff="Ночной режим"
            android:summaryOn="Ночной режим"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>

        <SwitchPreference
            android:defaultValue="false"
            android:icon="?dashboardIcon"
            android:key="@string/pref_design_key_list_style"
            android:summaryOff="В виде сетки"
            android:summaryOn="В виде сетки"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>

        <ListPreference
            android:icon="?viewModuleIcon"
            android:key="@string/pref_design_key_col_num"
            android:title="@string/pref_design_title_col_num"
            android:entries="@array/pref_design_col_num_entries"
            android:entryValues="@array/pref_design_col_num_values"
            android:defaultValue="2"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Размер текста">

        <Preference
            android:icon="?textSizeIcon"
            android:key="@string/pref_design_key_text_size"
            android:summary="@string/text_size_summary"
            android:title="@string/text_size_title">
        </Preference>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/pref_design_art_card_category_title">
        <SwitchPreference
            android:defaultValue="true"
            android:icon="?pictureInPictureIcon"
            android:key="@string/pref_design_key_art_card_style"
            android:summaryOff="Только заголовок"
            android:summaryOn="Максимум информации"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>
        <SwitchPreference
            android:defaultValue="true"
            android:dependency="@string/pref_design_key_art_card_style"
            android:icon="?defaultImage"
            android:key="@string/pref_design_key_art_card_image"
            android:summaryOff="Картинки НЕ загружаются"
            android:summaryOn="Картинки отображаются"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="@string/pref_design_key_art_card_style"
            android:icon="?overflowIcon"
            android:key="@string/pref_design_key_art_card_more_actions"
            android:summaryOff="Кнопка дополнительных действий"
            android:summaryOn="Кнопка дополнительных действий"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>
        <SwitchPreference
            android:defaultValue="true"
            android:dependency="@string/pref_design_key_art_card_style"
            android:icon="?pagesIcon"
            android:key="@string/pref_design_key_art_card_preview_show"
            android:summaryOff="Краткое содержание"
            android:summaryOn="Краткое содержание"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>
        <SwitchPreference
            android:defaultValue="false"
            android:dependency="@string/pref_design_key_art_card_style"
            android:icon="?verticalAlignCenterIcon"
            android:key="@string/pref_design_key_art_card_preview_short"
            android:summaryOff="Свёрнутое краткое содержание"
            android:summaryOn="Свёрнутое краткое содержание"
            android:switchTextOff="Выкл"
            android:switchTextOn="Вкл"/>
    </PreferenceCategory>
</PreferenceScreen>
